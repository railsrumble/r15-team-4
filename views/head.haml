%link{href: 'http://maxcdn.bootstrapcdn.com/bootswatch/3.2.0/yeti/bootstrap.min.css', media: 'all', rel: 'stylesheet', type: 'text/css'}
%script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js', type: 'text/javascript', charset: 'utf-8' }

:javascript
  $(function() {
    $('#search-form').on('submit', function(e) {
      e.preventDefault();
      var $form = $(this);
      var group = $form.find('.form-group');
      var repo = $form.find('input').val();
      if (repo.match(/.+\/.+/) ) {
        group.removeClass('has-error');
        group.addClass('has-success');
        window.location = '/gitten/' + repo.replace(/\s/g, '');
      } else {
        group.addClass('has-error');
      }
    });
  });
